{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "typeRoots":["typings"],
      "baseUrl": ".",
      "paths": {
        "@/*": [
            "src/*"
        ],
        "@constants/*": ["./src/constants/*"],
        "@contexts/*": ["./src/contexts/*"],
        "@hooks/*": ["./src/contexts/hooks/*"],
        "@components/*": ["./src/components/*"],
        "@utils/*": ["./src/utils/*"],
    },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }